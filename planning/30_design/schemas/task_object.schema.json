{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/task_object.schema.json",
  "title": "TaskObject",
  "type": "object",
  "required": ["task_id", "goal", "artifacts", "metadata"],
  "properties": {
    "task_id": {"type": "string", "pattern": "T-[0-9]{4}-[0-9]{4}"},
    "goal": {"type": "string"},
    "phase": {"type": "string", "enum": ["idea", "discovery", "definition", "design", "build", "validate", "launch", "operate"]},
    "artifacts": {
      "type": "object",
      "properties": {
        "blueprint_ref": {"type": "string"},
        "review_reports": {"type": "array", "items": {"type": "string"}},
        "test_results": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["blueprint_ref"]
    },
    "metrics": {
      "type": "object",
      "properties": {
        "tokens_used": {"type": "number"},
        "latency_ms": {"type": "number"},
        "blockers": {"type": "integer", "minimum": 0}
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "repo": {"type": "string"},
        "branch": {"type": "string"},
        "request_id": {"type": "string"}
      },
      "required": ["repo", "branch"]
    }
  }
}
