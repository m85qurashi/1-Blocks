{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ComplianceAttestationOutput",
  "type": "object",
  "required": ["status", "attestation"],
  "properties": {
    "status": {"type": "string", "enum": ["verified_exact", "verified_equivalent", "needs_revision"]},
    "attestation": {
      "type": "object",
      "properties": {
        "attestation_id": {"type": "string"},
        "control_summary": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "control_id": {"type": "string"},
              "result": {"type": "string"},
              "notes": {"type": "string"}
            }
          }
        }
      }
    },
    "report_ref": {"type": "string"}
  }
}
