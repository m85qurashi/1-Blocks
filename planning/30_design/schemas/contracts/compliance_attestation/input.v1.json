{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ComplianceAttestationInput",
  "type": "object",
  "required": ["attestation_id", "controls"],
  "properties": {
    "attestation_id": {"type": "string"},
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["control_id", "status", "evidence"],
        "properties": {
          "control_id": {"type": "string"},
          "status": {"type": "string", "enum": ["pass", "fail", "risk"]},
          "evidence": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "owner": {"type": "string"}
  }
}
