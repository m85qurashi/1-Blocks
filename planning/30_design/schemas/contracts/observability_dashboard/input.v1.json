{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ObservabilityDashboardInput",
  "type": "object",
  "required": ["dashboard_id", "signals"],
  "properties": {
    "dashboard_id": {"type": "string"},
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["metric", "threshold", "source"],
        "properties": {
          "metric": {"type": "string"},
          "threshold": {"type": "number"},
          "source": {"type": "string"},
          "aggregation": {"type": "string", "enum": ["avg", "p95", "sum", "count"]}
        }
      }
    },
    "alerts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "severity"],
        "properties": {
          "name": {"type": "string"},
          "severity": {"type": "string", "enum": ["info", "warn", "critical"]}
        }
      }
    }
  }
}
