{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ObservabilityDashboardOutput",
  "type": "object",
  "required": ["status", "dashboard"],
  "properties": {
    "status": {"type": "string", "enum": ["verified_exact", "verified_equivalent", "needs_revision"]},
    "dashboard": {
      "type": "object",
      "properties": {
        "dashboard_id": {"type": "string"},
        "widgets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {"type": "string"},
              "metric": {"type": "string"},
              "query": {"type": "string"}
            }
          }
        },
        "alerts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "severity": {"type": "string"},
              "condition": {"type": "string"}
            }
          }
        }
      }
    },
    "dashboards_ref": {"type": "string"}
  }
}
