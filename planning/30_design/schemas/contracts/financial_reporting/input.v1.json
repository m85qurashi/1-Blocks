{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FinancialReportingInput",
  "type": "object",
  "required": ["report_id", "period", "accounts"],
  "properties": {
    "report_id": {"type": "string"},
    "period": {
      "type": "object",
      "required": ["start", "end"],
      "properties": {
        "start": {"type": "string", "format": "date"},
        "end": {"type": "string", "format": "date"}
      }
    },
    "accounts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["account", "amount", "currency"],
        "properties": {
          "account": {"type": "string"},
          "amount": {"type": "number"},
          "currency": {"type": "string", "pattern": "^[A-Z]{3}$"}
        }
      }
    },
    "compliance_flags": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}
